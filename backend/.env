# HEARTALK-AI Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=8000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication & Security (REQUIRED)
# Internal API key for AI service communication - 与AI service保持一致
HEARTALK_API_KEY=dev_heartalk_api_key_placeholder
# JWT secret for token signing/verification - 与AI service保持一致
JWT_SECRET=dev_jwt_secret_key_change_in_production

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=heartalk
DB_USER=postgres
DB_PASSWORD=postgres123

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_TIMEOUT=30000

# Performance Configuration
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# Security Headers
HELMET_ENABLED=true
CSRF_PROTECTION=false

# Development/Production Flags
DEBUG_MODE=false
ENABLE_SWAGGER=true