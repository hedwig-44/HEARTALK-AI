{
  "name": "ai-service",
  "version": "1.0.0",
  "description": "HearTalk AI服务MVP替换方案 - 集成Chain-of-Thought和Self-Consistency推理增强",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t ai-service .",
    "docker:run": "docker run -p 8001:8001 ai-service"
  },
  "keywords": [
    "ai",
    "chatbot",
    "byteplus",
    "vikingdb",
    "chain-of-thought",
    "self-consistency",
    "mvp"
  ],
  "author": "Claude Code AI Assistant",
