# Test Environment Configuration
NODE_ENV=test
PORT=8002
HOST=localhost

# JWT Configuration for Tests
JWT_SECRET=test_jwt_secret_key
JWT_EXPIRES_IN=1h

# Mock Byteplus Endpoints for Tests
BYTEPLUS_AMI_CHAT_EP=mock_chat_endpoint
BYTEPLUS_AMI_WORK_ASSISTANT_EP=mock_work_assistant_endpoint
BYTEPLUS_API_KEY=mock_api_key

# Mock VikingDB Configuration for Tests
VIKINGDB_HOST=mock_vikingdb_host
VIKINGDB_REGION=mock_region
VIKINGDB_ACCESS_KEY=mock_access_key
VIKINGDB_SECRET_KEY=mock_secret_key

# Collection Names
COMMUNICATION_TEMPLATES_COLLECTION=test_communication_templates

# Mock HearTalk Backend
HEARTALK_BACKEND_URL=http://localhost:8003
HEARTALK_API_KEY=test_api_key

# Test Logging
LOG_LEVEL=error
LOG_FILE=logs/test.log

# Context Management for Tests
MAX_CONTEXT_TOKENS=1000
MAX_CONVERSATION_ROUNDS=5

# Test Chain-of-Thought & Self-Consistency
ENABLE_CHAIN_OF_THOUGHT=true
ENABLE_SELF_CONSISTENCY=false
SELF_CONSISTENCY_SAMPLES=2