# HearTalk AI MVP 生产环境配置
NODE_ENV=production
PORT=8001
HOST=0.0.0.0

# JWT Configuration (生产环境必须更改!)
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_TO_SECURE_SECRET
JWT_EXPIRES_IN=24h

# Byteplus Model Ark Configuration (生产配置)
BYTEPLUS_AMI_CHAT_EP=ep-20250819170822-q2vnf
BYTEPLUS_AMI_WORK_ASSISTANT_EP=ep-20250826180754-nwjhn
BYTEPLUS_API_KEY=CHANGE_THIS_TO_PRODUCTION_API_KEY
BYTEPLUS_TIMEOUT=30000
BYTEPLUS_WORK_ASSISTANT_TIMEOUT=60000

# VikingDB Configuration (生产配置)
VIKINGDB_HOST=api-vikingdb.mlp.ap-mya.byteplus.com
VIKINGDB_REGION=ap-southeast-1
VIKINGDB_ACCESS_KEY=CHANGE_THIS_TO_PRODUCTION_ACCESS_KEY
VIKINGDB_SECRET_KEY=CHANGE_THIS_TO_PRODUCTION_SECRET_KEY

# Collection Names
COMMUNICATION_TEMPLATES_COLLECTION=communication_templates_base

# HearTalk后端集成 (生产配置)
HEARTALK_BACKEND_URL=https://your-production-backend.com
HEALTH_CHECK_INTERVAL=30000
HEARTALK_API_KEY=CHANGE_THIS_TO_PRODUCTION_HEARTALK_API_KEY

# Backend API路径配置
BACKEND_API_PREFIX=/internal/api/v1
BACKEND_CONVERSATION_PATH=/conversations
BACKEND_USER_PATH=/users

# Logging (生产配置)
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting (生产强化)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Context Management
MAX_CONTEXT_TOKENS=2000
MAX_CONVERSATION_ROUNDS=10

# Chain-of-Thought & Self-Consistency (生产配置)
ENABLE_CHAIN_OF_THOUGHT=true
ENABLE_SELF_CONSISTENCY=true
SELF_CONSISTENCY_SAMPLES=3
# 生产模式：隐藏推理过程，只显示最终答案
SHOW_REASONING_PROCESS=false